<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @service.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_address_id) %>:</strong></dt>
  <dd><%= @service.from_address_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to_address_id) %>:</strong></dt>
  <dd><%= @service.to_address_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_time) %>:</strong></dt>
  <dd><%= @service.date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment) %>:</strong></dt>
  <dd><%= @service.payment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:passengers) %>:</strong></dt>
  <dd><%= @service.passengers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_type_id) %>:</strong></dt>
  <dd><%= @service.vehicle_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_method_id) %>:</strong></dt>
  <dd><%= @service.payment_method_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_code) %>:</strong></dt>
  <dd><%= @service.service_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_id) %>:</strong></dt>
  <dd><%= @service.vehicle_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @service.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experience) %>:</strong></dt>
  <dd><%= @service.experience %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @service.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              services_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_service_path(@service), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              service_path(@service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
