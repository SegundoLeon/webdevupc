<%= simple_form_for [@vehicle_type,@vehicle], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :brand %>
  <%= error_span(@vehicle[:brand]) %>
  <%= f.input :model %>
  <%= error_span(@vehicle[:model]) %>
  <%= f.input :plate %>
  <%= error_span(@vehicle[:plate]) %>
  <%= f.input :status %>
  <%= error_span(@vehicle[:status]) %>
  <%= f.association :user %>
  <%= error_span(@vehicle[:user_id]) %>
  <%= f.association :vehicle_type %>
  <%= error_span(@vehicle[:vehicle_type_name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicle_type_vehicles_path(@vehicle_type), :class => 'btn btn-default' %>
<% end %>

