<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :reference %>
    <%= f.input :alias %>
    <%= f.input :favourite %>
    <%= f.association :profile %>
    <%= f.association :district %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
