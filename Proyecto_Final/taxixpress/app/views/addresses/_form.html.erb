<%= simple_form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@address[:name]) %>
  <%= f.input :reference %>
  <%= error_span(@address[:reference]) %>
  <%= f.input :alias %>
  <%= error_span(@address[:alias]) %>
  <%= f.input :favourite %>
  <%= error_span(@address[:favourite]) %>
  <%= f.association :profile %>
  <%= error_span(@address[:profile_name]) %>
  <%= f.association :district %>
  <%= error_span(@address[:district_name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
<% end %>
