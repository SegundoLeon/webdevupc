<%= simple_form_for @payment_method, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@payment_method[:name]) %>
  <%= f.input :description %>
  <%= error_span(@payment_method[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payment_methods_path, :class => 'btn btn-default' %>
<% end %>
